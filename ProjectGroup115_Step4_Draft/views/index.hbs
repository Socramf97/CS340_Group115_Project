{{!-- The Data from our Database --}}

{{!-- Create a table --}}
<table id="products-table" border=1>

    {{!-- Header section --}}
    <thead>

        {{!-- For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders --}}
        <tr>
            {{#each data.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
            <th>delete</th>
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>

        {{!-- For each row, print the id, fname, lname, homeworld and age, in order --}}
        {{#each data}}
        <tr data-value={{this.productID}}>
            <td>{{this.productID}}</td>
            <td>{{this.itemName}}</td>
            <td>{{this.itemType}}</td>
            <td>{{this.itemRarity}}</td>
            <td>{{this.price}}</td>
            <td>{{this.quantityStocked}}</td>
            <td><button onclick="deleteProduct({{this.productID}})">Delete</button></td>
        </tr>
        {{/each}}
    </tbody>
</table>
<script src="/js/delete_product.js"></script>

